<%= form_with model: vehiculo do |f| %>
    <div class="mb-3">
        <%= f.label :titulo, 'Titulo:', class: 'form-label' %>
        <%= f.text_field :titulo, class: 'form-control' %>
        <% vehiculo.errors.full_messages_for(:titulo).each do |msj| %>
            <div class="invalid-feedback">
                <%= msj %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= f.label :descripcion, 'Descripcion:', class: 'form-label' %>
        <%= f.text_area :descripcion, class: 'form-control' %><br>
        <% vehiculo.errors.full_messages_for(:descripcion).each do |msj| %>
            <div class="invalid-feedback">
                <%= msj %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= f.label :img, 'Imagen:', class: 'form-label mb-3'%>
        <%= f.file_field :img, class: 'form-control' %>
        <% vehiculo.errors.full_messages_for(:img).each do |msj| %>
            <div class="invalid-feedback">
                <%= msj %>
            </div>
        <% end %>
    </div>
        <%= f.submit 'Guardar', class: 'btn btn-primary' %>
<% end %>